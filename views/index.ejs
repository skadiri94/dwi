
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>DWI</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="assets/css/styles.css" rel="stylesheet" />
    </head>
    <body>
        <div class="d-flex" id="wrapper">
            <!-- Sidebar-->
            <div class="border-end bg-white" id="sidebar-wrapper">
                <div class="sidebar-heading border-bottom bg-light">Products Type</div>
                <div class="list-group list-group-flush">
                    <% productTypes.forEach(function(type){ %> 
                    <a class="list-group-item list-group-item-action list-group-item-light p-3" href="#!"><%= type.key      %> : <%=    type.value%> </a>
                    <%}); %>
                </div>
            </div>
            <!-- Page content wrapper-->
            <div id="page-content-wrapper">
                <!-- Top navigation-->
                <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                    <div class="container-fluid">
                        <a class="btn btn-primary" href="/addpage">Add Product</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                                <li class="nav-item active"><a class="nav-link" href="/">Home</a></li>
                            </ul>
                        </div>
                    </div>
                </nav>
                <!-- Page content-->
                <div class="container-fluid">
                <!-- Header-->
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Shop in style</h1>
                    <p class="lead fw-normal text-white-50 mb-0">With this Don-With-It Web Application</p>
                </div>
            </div>
        </header>
        <!-- Section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    <% products.forEach(function(product){ %> 
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-left">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder"><%= product.value.title %></h5>
                                    <!-- Product price-->
                                    $<%= product.value.price %> <br>
                                     <!-- Product type-->
                                    Type: <%= product.value.type %><br>
                                     <!-- Product category-->
                                    <%= product.value.category %><br>
                                     <!-- Product review and count-->
                                    Review: <%= product.value.reviews.average %> (<%= product.value.reviews.count %>)<br>
                                    Condition:<%= product.value.condition %><br>

                                    
                                    
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class=" p-4 pt-0 border-top-0 bg-transparent">
                                <form  method="post" action='/updatepage/<%= product.key %>' >
                                    <input type="hidden" class="form-control" value='<%= product.value.rev %>' name='rev' >
                                <div class="text-center"><button class="btn btn-outline-dark mt-auto" >Update</button></div>
                            </form>
                            </div>
                            <div class="p-4 pt-0 border-top-0 bg-transparent">
                                <form  method="post" action='/delete/<%= product.key %>'>
                                    <input type="hidden" class="form-control" value='<%= product.value.rev %>' name='rev' >
                                <div class="text-center"><button class="btn btn-outline-secondary mt-auto" >Delete</button></div>
                            </form>
                            </div>
                        </div>
                    </div>
                    <%}); %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
                </div>
            </div>
        </div>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="assets/js/scripts.js"></script>
    </body>
</html>
